<?xml version="1.0"?>
<config>
    <api>
        <resources>
            <farapp_connector_order_invoice translate="title" module="farapp_connector">
                <title>FarApp Connector Order Invoice API</title>
                <model>farapp_connector/order_invoice_api</model>
                <methods>
                    <capture translate="title" module="farapp_connector">
                        <title>Adds offline parameter to invoice capture</title>
                    </capture>
                </methods>
            </farapp_connector_order_invoice>
            <farapp_connector_product translate="title" module="farapp_connector">
                <title>FarApp Connector Product API</title>
                <model>farapp_connector/product_api</model>
                <methods>
                    <list translate="title" module="farapp_connector">
                        <title>Adds detailed parameter to products list</title>
                        <method>items</method>
                    </list>
                    <info translate="title" module="farapp_connector">
                        <title>Adds detailed parameter to product info</title>
                    </info>
                </methods>
            </farapp_connector_product>
            <farapp_connector_store translate="title" module="farapp_connector">
                <title>FarApp Connector Store API</title>
                <model>farapp_connector/store_api</model>
                <methods>
                    <list translate="title" module="farapp_connector">
                        <title>Adds website code to store list</title>
                        <method>items</method>
                    </list>
                    <info translate="title" module="farapp_connector">
                        <title>Adds website code to store info</title>
                    </info>
                </methods>
            </farapp_connector_store>
        </resources>
    </api>
</config>
