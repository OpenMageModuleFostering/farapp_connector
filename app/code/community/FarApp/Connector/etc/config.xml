<?xml version="1.0"?>
<!--
/**
* Module configuration
*
* @author Eyal Amir
*/
-->
<config>
    <modules>
        <FarApp_Connector>
            <version>1.5.8</version>
        </FarApp_Connector>
    </modules>
    <global>
        <models>
            <farapp_connector>
                <class>FarApp_Connector_Model</class>
            </farapp_connector>
            <sales>
                <rewrite>
                    <order_invoice_api>FarApp_Connector_Model_Order_Invoice_Api</order_invoice_api>
                    <order_creditmemo_api>FarApp_Connector_Model_Order_Creditmemo_Api</order_creditmemo_api>
                </rewrite>
            </sales>
            <catalog>
                <rewrite>
                    <product_api>FarApp_Connector_Model_Product_Api</product_api>
                </rewrite>
            </catalog>
            <importexport>
                <rewrite>
                    <import_entity_product>FarApp_Connector_Model_Import_Entity_Product</import_entity_product>
                </rewrite>
            </importexport>
        </models>
        <events>
            <sales_order_save_after>
                <observers>
                    <farapp_connector>
                        <class>farapp_connector/observer</class>
                        <method>postOrder</method>
                    </farapp_connector>
                </observers>
            </sales_order_save_after>
        </events>
        <helpers>
            <connector>
                <class>FarApp_Connector_Helper</class>
            </connector>
        </helpers>
        <farapp_connector module="farapp_connector">
            <import_entities>
                <catalog_product translate="label">
                    <model_token>farapp_connector/import_entity_product</model_token>
                    <label>Products</label>
                </catalog_product>
                <customer translate="label">
                    <model_token>farapp_connector/import_entity_customer</model_token>
                    <label>Customers</label>
                </customer>
                <order translate="label">
                    <model_token>farapp_connector/import_entity_order</model_token>
                    <label>Orders</label>
                </order>
            </import_entities>
            <import_product_types>
                <simple>farapp_connector/import_entity_product_type_simple</simple>
                <configurable>farapp_connector/import_entity_product_type_configurable</configurable>
                <virtual>farapp_connector/import_entity_product_type_virtual</virtual>
                <grouped>farapp_connector/import_entity_product_type_grouped</grouped>
                <bundle>farapp_connector/import_entity_product_type_bundle</bundle>
            </import_product_types>
            <export_entities>
                <order translate="label">
                    <model_token>farapp_connector/export_entity_order</model_token>
                    <label>Orders</label>
                </order>
            </export_entities>
        </farapp_connector>
        <importexport module="importexport">
            <import_entities>
                <catalog_product translate="label">
                    <model_token>farapp_connector/import_entity_product</model_token>
                    <label>Products</label>
                </catalog_product>
                <customer translate="label">
                    <model_token>farapp_connector/import_entity_customer</model_token>
                    <label>Customers</label>
                </customer>
                <order translate="label">
                    <model_token>farapp_connector/import_entity_order</model_token>
                    <label>Orders</label>
                </order>
            </import_entities>
            <import_product_types>
                <simple>farapp_connector/import_entity_product_type_simple</simple>
                <configurable>farapp_connector/import_entity_product_type_configurable</configurable>
                <virtual>farapp_connector/import_entity_product_type_virtual</virtual>
                <grouped>farapp_connector/import_entity_product_type_grouped</grouped>
                <bundle>farapp_connector/import_entity_product_type_bundle</bundle>
            </import_product_types>
        </importexport>
    </global>
    <frontend>
        <routers>
            <connector>
                <use>standard</use>
                <args>
                    <module>FarApp_Connector</module>
                    <frontName>farapp_connector</frontName>
                </args>
            </connector>
        </routers>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <connector>
                                            <title>FarApp Module Section</title>
                                        </connector>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <connector>
            <general>
                <import_behavior>replace</import_behavior>
                <partial_indexing>0</partial_indexing>
                <continue_after_errors>0</continue_after_errors>
                <error_limit>100</error_limit>
                <support_nested_arrays>0</support_nested_arrays>
                <ignore_duplicates>0</ignore_duplicates>
                <clear_field_on_empty_string>0</clear_field_on_empty_string>
                <symbol_for_clear_field>FARAPPOMIT</symbol_for_clear_field>
                <symbol_for_ignore_field>FARAPPIGNORE</symbol_for_ignore_field>
            </general>
            <product>
                <allow_rename_files>1</allow_rename_files>
                <status>1</status>
                <visibility>4</visibility>
                <weight>0</weight>
            </product>
        </connector>
    </default>
</config>
